{
  "lock": false,
  "tasks": {
    "check": "deno fmt --check && deno lint && deno check silverbook-pwa/**/*.ts && deno check silverbook-pwa/**/*.tsx",
    "cli": "echo \"import '\\$fresh/src/dev/cli.ts'\" | deno run --unstable -A -",
    "manifest": "deno task cli manifest $(pwd)/silverbook-pwa",
    "start": "cd silverbook-pwa && deno run -A --watch=static/,routes/ dev.ts",
    "build": "cd silverbook-pwa && deno run -A dev.ts build",
    "preview": "cd silverbook-pwa && deno run -A main.ts",
    "update": "deno run -A -r https://fresh.deno.dev/update silverbook-pwa"
  },
  "lint": {
    "rules": {
      "tags": [
        "fresh",
        "recommended"
      ]
    }
  },
  "exclude": [
    "**/_fresh/*"
  ],
  "imports": {
    "$fresh/": "https://deno.land/x/fresh@1.7.3/",
    "lucide-preact": "https://esm.sh/lucide-preact@0.475.0",
    "preact": "https://esm.sh/preact@10.22.0",
    "preact/": "https://esm.sh/preact@10.22.0/",
    "@preact/signals": "https://esm.sh/*@preact/signals@1.2.2",
    "@preact/signals-core": "https://esm.sh/*@preact/signals-core@1.5.1",
    "tailwindcss": "npm:tailwindcss@3.4.1",
    "tailwindcss/": "npm:/tailwindcss@3.4.1/",
    "tailwindcss/plugin": "npm:/tailwindcss@3.4.1/plugin.js",
    "$std/": "https://deno.land/std@0.216.0/"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  },
  "nodeModulesDir": "auto"
}
